{
    "name": "git-utility",
    "version": "0.2.0",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "A Git utility CLI tool with file download and submodule management capabilities",
    "keywords": [
        "git",
        "utility",
        "command",
        "cli",
        "download",
        "submodule"
    ],
    "homepage": "https://github.com/idea2app/Git-utility#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/idea2app/Git-utility.git"
    },
    "bugs": {
        "url": "https://github.com/idea2app/Git-utility/issues"
    },
    "type": "module",
    "bin": {
        "xgit": "dist/index.js"
    },
    "dependencies": {
        "commander-jsx": "^0.6.9",
        "zx": "^7.2.3"
    },
    "devDependencies": {
        "husky": "^8.0.3",
        "lint-staged": "^14.0.0",
        "prettier": "^3.0.2",
        "typescript": "~5.1.6"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "singleQuote": true
    },
    "lint-staged": {
        "*.{md,json,yml,ts,tsx}": "prettier --write"
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged",
        "build": "rm -rf dist/  &&  tsc",
        "prepublishOnly": "npm test  &&  npm run build"
    }
}
