{
    "name": "get-git-folder",
    "version": "0.1.0",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "A file downloader based on Git CLI",
    "keywords": [
        "file",
        "download",
        "git",
        "cli"
    ],
    "homepage": "https://github.com/idea2app/get-git-folder#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/idea2app/get-git-folder.git"
    },
    "bugs": {
        "url": "https://github.com/idea2app/get-git-folder/issues"
    },
    "type": "module",
    "bin": "dist/index.js",
    "dependencies": {
        "zx": "^7.2.2"
    },
    "devDependencies": {
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2",
        "prettier": "^2.8.8",
        "typescript": "^5.1.3"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "singleQuote": true
